trigger:
- main

pool:
  vmImage: ubuntu-latest

stages:

  - stage: BuildThings
    jobs:
      - job: Build
        steps:
          - shell: "Build your application here"
<% for stage in stages %>
  - stage: <%= stage.name %>
    jobs:
  <% for job in stage.jobs %>
    - job: <%= job.name %>
      steps:
      <% for task in job.tasks %>
        - task: <%= task.yaml_name %>
          displayName: "<%= task.display_name %>"
          inputs:
        <% for input in task.inputs -%>
    <%= input.join(': ') %>
        <% end %>
      <% end %>
  <% end %>

<% end %>
