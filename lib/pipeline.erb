trigger:
- main

pool:
vmImage: ubuntu-latest

stages:
<% for stage in stages %>
  - stage: <%= stage.name %>
  jobs:
  <% for job in stage.jobs %>
    - job: <%= job.name %>
      steps:
      <% for task in job.tasks %>
        - <%= Task.yaml_name(task.taskId) %>: <%= task.name %>
          inputs:
        <% for input in task.inputs %>
            <%= input.join(':') -%>
        <% end %>
      <% end %>
  <% end %>

<% end %>
